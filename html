<script>
// ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
document.addEventListener('DOMContentLoaded', () => {

    const elements = {
        btnSi: document.getElementById('btnSi'),
        btnNo: document.getElementById('btnNo'),
        textoNo: document.getElementById('textoNo'),
        imgGif: document.getElementById('imgGif'),
        btnConfirmar: document.getElementById('btnConfirmar'),
        btnMejorNo: document.getElementById('btnMejorNo'),
        btnVolver: document.getElementById('btnVolver'),
        btnVolverPantalla3: document.getElementById('btnVolverPantalla3'),
        btnEntrar: document.getElementById('btnEntrar'),
        inputNombre: document.getElementById('inputNombre'),
        mensajeError: document.getElementById('mensajeError'),
        heartRain: document.getElementById('heartRain')
    };

    let escalaSi = 1;
    let primeraVez = true;
    let contadorNo = 0;
    let isMovingMode = false;
    let moveInterval = null;

    // ‚îÄ‚îÄ‚îÄ Corazones cayendo ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
    function createHeart() {
        const heart = document.createElement("div");
        heart.className = "heart";
        heart.innerHTML = "‚ù§Ô∏è";
        heart.style.left = Math.random() * 100 + "%";
        heart.style.animationDuration = (Math.random() * 4 + 6) + "s";
        heart.style.animationDelay = Math.random() * 5 + "s";
        heart.style.opacity = Math.random() * 0.4 + 0.4;
        heart.style.fontSize = (Math.random() * 15 + 15) + "px";
        elements.heartRain.appendChild(heart);

        const dur = parseFloat(heart.style.animationDuration) * 1000;
        const del = parseFloat(heart.style.animationDelay) * 1000;
        setTimeout(() => {
            heart.remove();
            createHeart();
        }, dur + del);
    }

    for (let i = 0; i < 50; i++) createHeart();

    // ‚îÄ‚îÄ‚îÄ Normalizar texto para comparaci√≥n ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
    const normalizarTexto = txt => txt.normalize('NFD').replace(/[\u0300-\u036f]/g, '').toLowerCase().trim();

    // ‚îÄ‚îÄ‚îÄ Validar acceso ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
    function validarAcceso() {
        const ingresado = normalizarTexto(elements.inputNombre.value);
        const correcto  = normalizarTexto("andrea carolina velazquez baez");

        if (ingresado === correcto) {
            elements.mensajeError.style.display = 'none';
            reproducirSonido('si');
            cambiarPantalla(1);
            elements.inputNombre.value = '';
        } else {
            reproducirSonido('no');
            elements.mensajeError.style.display = 'block';
            elements.mensajeError.innerHTML = '‚ùå Nombre incorrecto. Solo personas autorizadas.';
            elements.inputNombre.value = '';
            elements.inputNombre.focus();
        }
    }

    // ‚îÄ‚îÄ‚îÄ Cambiar pantalla ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
    function cambiarPantalla(num) {
        document.querySelectorAll('.pantalla').forEach(p => {
            p.classList.remove('activa', 'zoom-in');
        });
        const pantalla = document.getElementById(`pantalla${num}`);
        pantalla.classList.add('activa');
        if (num === 3 || num === 5) {
            pantalla.classList.add('zoom-in');
        }
    }

    // ‚îÄ‚îÄ‚îÄ Sonidos simples ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
    function reproducirSonido(tipo) {
        const ctx = new (window.AudioContext || window.webkitAudioContext)();
        if (tipo === 'si') {
            [800, 1000].forEach((f, i) => {
                setTimeout(() => {
                    const osc = ctx.createOscillator();
                    const gain = ctx.createGain();
                    osc.connect(gain);
                    gain.connect(ctx.destination);
                    osc.frequency.value = f;
                    gain.gain.setValueAtTime(0.3, ctx.currentTime);
                    gain.gain.exponentialRampToValueAtTime(0.01, ctx.currentTime + 0.1);
                    osc.start();
                    osc.stop(ctx.currentTime + 0.1);
                }, i * 100);
            });
        } else if (tipo === 'no') {
            const osc = ctx.createOscillator();
            const gain = ctx.createGain();
            osc.connect(gain); gain.connect(ctx.destination);
            osc.frequency.setValueAtTime(600, ctx.currentTime);
            osc.frequency.linearRampToValueAtTime(400, ctx.currentTime + 0.2);
            gain.gain.setValueAtTime(0.3, ctx.currentTime);
            gain.gain.exponentialRampToValueAtTime(0.01, ctx.currentTime + 0.2);
            osc.start();
            osc.stop(ctx.currentTime + 0.2);
        }
    }

    // ‚îÄ‚îÄ‚îÄ Mostrar pantallas ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
    function mostrarInvitacion()     { reproducirSonido('si'); cambiarPantalla(2); }
    function mostrarDetallesCita()   { reproducirSonido('si'); cambiarPantalla(3); }
    function mostrarGifTriste()      { reproducirSonido('no'); cambiarPantalla(4); }

    function volverAlInicio() {
        reproducirSonido('si');
        contadorNo = 0;
        escalaSi = 1;
        primeraVez = true;
        isMovingMode = false;
        if (moveInterval) clearInterval(moveInterval);

        document.querySelectorAll('.btn-si-flood').forEach(b => b.remove());

        elements.btnSi.style.cssText = "transform:scale(1); opacity:1; pointer-events:auto;";
        elements.btnNo.style.cssText = "opacity:1; pointer-events:auto; position:relative; left:0; top:0; transform:scale(1);";
        elements.btnNo.classList.remove('moving');

        elements.imgGif.src = "https://i.ibb.co/Gfkxj1m4/Grabacindepantalla2026-02-08212818-ezgif-com-video-to-gif-converter.gif";
        elements.textoNo.style.display = 'none';
        elements.textoNo.innerHTML = '';

        elements.inputNombre.value = '';
        elements.mensajeError.style.display = 'none';

        cambiarPantalla(0);
    }

    function shakeCard() {
        const content = document.querySelector(".card-content");
        content.classList.add('shake');
        setTimeout(() => content.classList.remove('shake'), 500);
    }

    // ‚îÄ‚îÄ‚îÄ L√≥gica principal del bot√≥n NO ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
    function activarNo() {
        reproducirSonido('no');
        contadorNo++;
        elements.textoNo.style.display = "block";
        shakeCard();

        if (contadorNo < 5) {
            const mensajes = [
                "¬øPOR QU√â APRET√ÅS EL NO? üò≠",
